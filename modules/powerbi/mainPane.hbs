<div class="p-8">
  {{> Headline title="PowerBI Integration" }}

  {{#> TableList 
    headers=this.tableHeaders
    items=this.instances
  }}
    {{!-- Actions block --}}
    {{#if this.ready }}
      <div class="flex gap-4 items-center">
        <button
          class="text-gray-600 hover:text-indigo-600"
          hx-post="/mod/powerbi/sync/"
          hx-target="closest #main"
          hx-swap="innerHTML"
          hx-vals='{"id": "{{this.id}}"}'
        >
          Merge
        </button>
        
        <button
          class="text-gray-600 hover:text-indigo-600"
          hx-post="/mod/powerbi/deleteInstance/"
          hx-target="closest #main"
          hx-swap="innerHTML"
          hx-vals='{"id": "{{this.id}}"}'
        >
          <svg 
            class="h-4 w-4" 
            xmlns="http://www.w3.org/2000/svg" 
            viewBox="0 0 448 512"
          >
            <path
              fill="currentColor"
              d="M135.2 17.7L128 32 32 32C14.3 32 0 46.3 0 64S14.3 96 32 96l384 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-96 0-7.2-14.3C307.4 6.8 296.3 0 284.2 0L163.8 0c-12.1 0-23.2 6.8-28.6 17.7zM416 128L32 128 53.2 467c1.6 25.3 22.6 45 47.9 45l245.8 0c25.3 0 46.3-19.7 47.9-45L416 128z"
            />
          </svg>
        </button>
      </div>
    {{/if}}
  {{/TableList}}

  {{#> Card style="w-1/2"}}
    <form
      class="mb-0"
      hx-post="/mod/powerbi/addInstance/"
      hx-target="closest #main"
      hx-swap="innerHTML"
    >
      <div class="mb-4">{{> FormText label="Instance Name" name="name" }}</div>
      <div class="mb-4">{{> FormText label="Tenant ID" name="tenantId" }}</div>
      <div class="mb-4">{{> FormText label="Client Id" name="clientId" }}</div>
      <div class="mb-4">{{> FormText label="Client Secret" name="clientSecret" }}</div>
      {{> FormSubmit label="Add" }}
    </form>
  {{/Card}}
</div>