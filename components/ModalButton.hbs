<div x-data="{ open: false }" class="relative">
  <button
    type="button"
    class="bg-indigo-600 py-1 px-4 rounded text-white text-sm"
    @click="open = !open"
  >
    {{label}}
  </button>
  <div x-show="open" class="fixed inset-0 z-20 bg-black bg-opacity-70" style="backdrop-filter: blur(5px)">
    <div
      @click.away="open = false" 
      class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 border border-gray-700 bg-gray-800 shadow-xl rounded-lg p-5"
    >
      {{> @partial-block }}
    </div>
  </div>
</div>