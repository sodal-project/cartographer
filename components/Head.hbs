<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cartographer</title>

  <!-- Tailwind CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    rel="stylesheet"
  />
  <!-- Tailwind for Shadow DOM -->
  <script>
    // Create a proxy endpoint to fetch Tailwind CSS
    window.getTailwindCSS = async () => {
      if (!window._tailwindCSS) {
        const response = await fetch('https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css');
        window._tailwindCSS = await response.text();
      }
      return window._tailwindCSS;
    };
  </script>

  <!-- Alpine JS -->
  <script
    src="https://cdn.jsdelivr.net/npm/alpinejs@3.14.1/dist/cdn.min.js"
    defer
  ></script>

  <!-- HTMX -->
  <script
    src="https://cdn.jsdelivr.net/npm/htmx.org@1.9.12/dist/htmx.min.js"
    defer
  ></script>

  <!-- HTMX Extensions -->
  <script src="/js/htmx-extensions.js" defer></script>
  <meta name="htmx-config" content='{"refreshOnHistoryMiss":"true"}' />

  <!-- Main JS -->
  <script type="module" src="/js/main.js" defer></script>

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet"
  />

  <!-- Styles -->
  <link href="/css/main.css" rel="stylesheet" />
</head>